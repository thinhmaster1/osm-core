@model List<OSM.Models.OrderViewModel>
@{
    ViewData["Title"] = "Order List";
}


    <div class="my-account">
        <div class="page-title">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="home-tab">
            <ul class="nav home-nav-tabs home-product-tabs">
                @for (var i = 0; i < Model.Count; i++)
                {
                    var item = Model[i].OrderStatus;
                    if (i == 0)
                    {
                        <li class="active"><a href="#@item" data-toggle="tab" aria-expanded="false">@item</a></li>
                    }
                    else
                    {
                        <li><a href="#@item" data-toggle="tab" aria-expanded="false">@item</a></li>
                    }
                }
            </ul>

        </div>
        <br />
        <br />
        <div id="productTabContent" class="tab-content">
            @for (var i = 0; i < Model.Count; i++)
            {
                var category = Model[i].OrderStatus;
                string css = string.Empty;
                if (i == 0)
                {
                    css = "tab-pane active in";
                }
                else
                {
                    css = "tab-pane wow fadeInLeft";
                }
            <div class="@css" id="@category">
                <div class="orders-list table-responsive mid_center">
                    <!--orders list table-->
                    @if (Model[i].OrderBills.Count > 0)
                    {
                        <table class="table table-bordered cart_summary table-striped">
                            <thead>
                                <tr>
                                    <!--titles for td-->
                                    <th>Order Number</th>
                                    <th>Order Date</th>
                                    <th>Order Status</th>
                                    <th>Payment Method</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model[i].OrderBills)
                                {
                                    <tr>
                                        <!--order number-->
                                        <td data-title="Order Number"><a asp-action="OrderDetail" asp-route-id="@item.Id" class="order-number">#@item.Id</a></td>
                                        <!--order date-->
                                        <td data-title="Order Date">@item.DateCreated</td>
                                        <!--order status-->
                                        <td data-title="Order Status">@item.BillStatus</td>
                                        <!--order payment method-->
                                        <td data-payment="Payment Method">@item.PaymentMethod</td>
                                    </tr>
                                }



                            </tbody>
                        </table>
                    }

                </div>
            </div>
            }
        </div>

    </div>