
 <header>
            <div class="header-container">
                <div class="header-top">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-4 col-md-4 col-xs-12">
                                <!-- Default Welcome Message -->
                                @if (User.Identity.IsAuthenticated)
                                {
                                    var roles = User.GetSpecificClaim("Roles").Split(';');
                                    @if (roles.Contains("Admin") || roles.Contains("Staff"))
                                    {
                                        <div class="welcome-msg hidden-xs hidden-sm">Welcome, @User.GetSpecificClaim("FullName")! <a href="~/admin/home/">Management</a> </div>
                                    }
                                    else
                                    {
                                        <div class="welcome-msg hidden-xs hidden-sm">Welcome, @User.GetSpecificClaim("FullName")! </div>
                                    }
                                }
                                else
                                {
                                    <div class="welcome-msg hidden-xs hidden-sm">Welcome, We are happy for serving you! </div>
                                }



                            </div>

                            <!-- top links -->
                            <div class="headerlinkmenu col-md-8 col-sm-8 col-xs-12">
                                <ul class="links">
                                    <li class="hidden-xs"><a title="Help Center" href="contact.html"><span>About Us & Support Center</span></a></li>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <li>
           
                                                <a   href="/Manage/Index"><span>@User.GetSpecificClaim("FullName")</span></a>
                                               
     
                                        </li>
                                        <li>
                                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" >
                                                <a href="#" onclick="document.getElementById('logoutForm').submit()"><span>Log out</span></a>
                                            </form>
                                        </li>
                                    }
                                    else
                                    {
                                        
                                        <li><a title="login" href="/login.html"><span>Login</span></a></li>
                                        <li><a title="register" href="/register.html"><span>Register</span></a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- header inner -->
                <div class="header-inner">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-3 col-xs-12 jtv-logo-block">

                                <!-- Header Logo -->
                                <div class="logo"><a title="e-commerce" href="/"><img alt="Online Shopping Mart" title="Online Shopping Mart" src="/client-side/images/logo.png"></a> </div>
                            </div>
                            <div class="col-xs-12 col-sm-5 col-md-6 jtv-top-search">

                                <!-- Search -->

                                <div class="top-search">
                                    <div id="search">
                                        <form method="get" action="/search.html">
                                            <div class="input-group">
                                                <input type="text" class="form-control" placeholder="Enter your product name..." name="keyword">
                                                <button class="btn-search" type="submit"><i class="fa fa-search"></i></button>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                                <!-- End Search -->

                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-3 top-cart">
                                <div class="link-wishlist"> <a href="#"> <i class="icon-heart icons"></i><span> Wishlist</span></a> </div>
                                <!-- top cart -->
                                <div class="top-cart-contain">
                                    <vc:header-cart></vc:header-cart>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>